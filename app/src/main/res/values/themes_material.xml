<resources>

    <style name="Platform.V23.Theme.HapViewerAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/system_window_scrim</item>
        <item name="android:navigationBarColor">@color/system_window_scrim_navbar_compat</item>
        <item name="navigationBarColorCompatible">@color/system_window_scrim</item>

        <item name="android:windowLightStatusBar">?windowLightStatusBar</item>
        <item name="windowLightStatusBar">false</item>
        <item name="windowLightNavigationBar">?isLightTheme</item>

        <item name="android:listPreferredItemPaddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:listPreferredItemPaddingEnd">?listPreferredItemPaddingEnd</item>

        <item name="textAppearanceTitleMedium">?textAppearanceSubtitle2</item>
        <item name="textAppearanceBodyMedium">?textAppearanceBody2</item>
    </style>

    <style name="Platform.Theme.HapViewerAndroid" parent="Platform.V23.Theme.HapViewerAndroid" />

    <style name="Base.Theme.HapViewerAndroid" parent="Platform.Theme.HapViewerAndroid">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="codeColorString">@color/material_code_color_string</item>
        <item name="codeColorNumber">@color/material_code_color_number</item>
        <item name="codeColorKeyword">@color/material_code_color_keyword</item>

        <item name="materialCardViewElevatedStyle">@style/Widget.HapViewerAndroid.CardView.Elevated</item>
        <item name="materialCardViewStyle">?materialCardViewElevatedStyle</item>

        <item name="selectFileIcon">@drawable/ic_file</item>
        <item name="dropFileIcon">@drawable/ic_file_upload</item>

        <item name="liftOnScroll">false</item>
        <item name="listItemGroupStyle">@style/Widget.ListItemGroup.Material</item>
        <item name="listItemStyle">@style/Widget.ListItem.Material</item>
        <item name="listItemLayoutStyle">@style/Widget.ListItem.Layout.Material</item>
        <item name="listItemSpacerStyle">@style/Widget.ListItem.Layout.Spacer.Material</item>
        <item name="paddingBottomWithFabSize">64dp</item>
        <item name="cardMargin">16dp</item>
        <item name="listPaddingVertical">8dp</item>
        <item name="listPreferredItemPaddingStart">16dp</item>
        <item name="listPreferredItemPaddingEnd">16dp</item>
        <item name="itemMargin">16dp</item>

        <item name="appIconBackground">@drawable/bitmap_shadow_material</item>
    </style>

    <style name="Theme.HapViewerAndroid" parent="Base.Theme.HapViewerAndroid" />
</resources>