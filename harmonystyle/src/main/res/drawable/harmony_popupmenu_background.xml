<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <!--suppress AndroidElementNotAllowed -->
        <org.ohosdev.hapviewerandroid.harmonystyle.drawable.ShadowDrawable
            android:radius="@dimen/harmony_corner_radius_menu"
            app:alpha="0.15"
            app:shadowColor="#2600001E"
            app:shadowRadius="@dimen/harmony_shadow_s3_radius"
            app:shadowY="10dp" />
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- 使用colorBackgroundFloating，保证夜间模式颜色显示正常 -->
            <solid android:color="?colorSurface" />
            <corners android:radius="@dimen/harmony_corner_radius_menu" />
            <padding
                android:bottom="4dp"
                android:top="4dp" />
        </shape>
    </item>

</layer-list>
