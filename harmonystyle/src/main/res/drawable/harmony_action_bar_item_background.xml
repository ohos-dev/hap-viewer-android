<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/harmony_pressed" />
            <corners android:radius="@dimen/harmony_corner_radius_clicked" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@color/harmony_color_focused" />
                    <corners android:radius="@dimen/harmony_corner_radius_clicked" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>